<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:exc="clr-namespace:WPFCoreEx.Controls;assembly=WPFCoreEx">
    <SolidColorBrush x:Key="DefaultBackground" Color="#363636"/>
    <SolidColorBrush x:Key="FolderBackground" Color="#242424"/>
    <SolidColorBrush x:Key="ItemText" Color="#242424"/>
    <SolidColorBrush x:Key="ButtonAndSearchBackground" Color="#545454"/>
    <SolidColorBrush x:Key="HeaderElements" Color="#858585"/>
    <SolidColorBrush x:Key="DefaultPurple" Color="#773079"/>
    <SolidColorBrush x:Key="DefaultWhite" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SelectedFolder" Color="#DADADA"/>
    <SolidColorBrush x:Key="ItemElements" Color="#C9C9C9"/>
    <FontFamily x:Key="DefaultFontFamily">Akzidenz-Grotesk Pro</FontFamily>

    <Style TargetType="Menu">
        <Style.Resources>
            <Style TargetType="exc:MenuItemEx">
                <Setter Property="BackgroundPopup" Value="{StaticResource DefaultBackground}"/>
                <Setter Property="Foreground" Value="#858585"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </Style.Resources>
        <Setter Property="Background" Value="{x:Null}"/>
    </Style>
</ResourceDictionary>