<Window x:Class="EncoderUI.Views.EncoderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncoderUI.Views"
        mc:Ignorable="d"
		WindowStyle="None"
		Background="#363636"
		Height="620" Width="930"
		ResizeMode="CanResize"
		DataContext="{Binding Source={StaticResource ViewModelsController}, Path=EncoderWindowVM}"
        Title="{Binding Title}"
		>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Width="915" Margin="0,0,15,0">
            <Button Content="х" HorizontalAlignment="Left" Height="18" Margin="897,11,0,11" VerticalAlignment="Top" Width="18"/>
            <Button Content="_" HorizontalAlignment="Left" Height="18" Margin="864,11,33,11" VerticalAlignment="Center" Width="18"/>
            <Grid>
                <Rectangle HorizontalAlignment="Left" Height="40" Margin="0,0,810,0" VerticalAlignment="Top" Width="40" Fill="#363636" Visibility="Visible"/>
                <Border HorizontalAlignment="Left" Height="40" Margin="0,0,0,0" VerticalAlignment="Top" Width="850" Background="#363636" CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="4" Opacity="0.25" Direction="300" ShadowDepth="7"/>
                    </Border.Effect>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="26*"/>
                <ColumnDefinition Width="67*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
